<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.templateapp.template.view.ui.fragments.support.QuestionFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_horizontal_margin"
        android:layout_marginLeft="@dimen/double_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/double_horizontal_margin"
        android:layout_marginEnd="@dimen/double_horizontal_margin">

        <TextView
            android:id="@+id/answer"
            android:text="@string/template_text_long"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
